<div class="modal">
	<div>
		<a href="/" class="exit"><i class="fa-solid fa-x"></i></a>
		<img src="https://covers.openlibrary.org/b/id/<%= book.covers[0] %>-M.jpg" />
		<div class="modal-left">
			<h1>
				<%= book.title %>
			</h1>
			<p class="book-detail">
				By <% for( let author of authors) { %>
					<span>
						<%= author.name + (author !=authors[authors.length - 1] ? "," : "" )%>
					</span>
					<% } %> â€¢ <%= book.publish_date %>
			</p>
			<form action="/<%= review ? 'edit' : 'post' %>/<%= isbn %>" method="POST" class="review-form">
				<div class="rate">
					<input type="radio" id="star5" name="rate" value="5" <% if (review.rating==5) { %>
					checked
					<% } %>/>
						<label for="star5" title="text">5 stars</label>
						<input type="radio" id="star4" name="rate" value="4" <% if (review.rating==4) { %>
						checked
						<% } %>/>
							<label for="star4" title="text">4 stars</label>
							<input type="radio" id="star3" name="rate" value="3" <% if (review.rating==3) { %>
							checked
							<% } %>/>
								<label for="star3" title="text">3 stars</label>
								<input type="radio" id="star2" name="rate" value="2" <% if (review.rating==2) { %>
								checked
								<% } %>/>
									<label for="star2" title="text">2 stars</label>
									<input type="radio" id="star1" name="rate" value="1" <% if (review.rating==1) { %>
									checked
									<% } %> />
										<label for="star1" title="text">1 star</label>
				</div>
				<textarea name="description" placeholder="Enter your review here.">
<%= review.description || "" %></textarea>

				<input type="submit" value="submit" class="submit" />
			</form>
		</div>
	</div>
</div>